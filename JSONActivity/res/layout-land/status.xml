<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:id="@+id/background_hor"
              android:orientation="vertical"
              android:baselineAligned="false"
              android:gravity="center_vertical|center_horizontal|top"
              android:background="#ffffff">

    <ImageView
            android:layout_width="wrap_content"
            android:src="@drawable/buap_logo_vector"
            android:layout_height="wrap_content"
            android:alpha="1"
            android:layout_gravity="center"
            />

    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/matricula_hor"
            android:textAlignment="center"
            android:gravity="center_vertical|center_horizontal"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:autoText="false"
            android:textColor="#000000"
            android:layout_weight="1"/>

    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/carrera_hor"
            android:textAlignment="center"
            android:textColor="#000000"
            android:gravity="center_vertical|center_horizontal"
            android:layout_gravity="center"
            android:layout_weight="1"/>

    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/puntaje_hor"
            android:textAlignment="center"
            android:textColor="#000000"
            android:gravity="center_vertical|center_horizontal"
            android:layout_gravity="center"
            android:layout_weight="1"/>

    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/status_hor"
            android:capitalize="characters"
            android:textColor="#000000"
            android:gravity="center_vertical|center_horizontal"
            android:layout_gravity="center"
            android:layout_weight="1"/>

</LinearLayout>